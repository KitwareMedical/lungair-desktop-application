<layout type="vertical" split="true">
  <item>
    <layout type="horizontal" split="false">
      <item>
        <view class="vtkMRMLSliceNode" singletontag="xray">
          <property name="orientation" action="default">Coronal</property>
          <property name="viewlabel" action="default">Chest X-Ray</property>
        </view>
      </item>
      <item>
        <view class="vtkMRMLSliceNode" singletontag="xrayFeatures">
          <property name="orientation" action="default">Coronal</property>
          <property name="viewlabel" action="default">X-Ray Features</property>
        </view>
      </item>
    </layout>
  </item>
  <item>
    <layout type="horizontal" split="false">
      <item>
        <view class="vtkMRMLPlotViewNode" singletontag="ClinicalParameters">
          <property name="viewlabel" action="default">Clinical Parameters</property>
        </view>
      </item>
      <item>
        <view class="vtkMRMLPlotViewNode" singletontag="RiskAnalysis">
          <property name="viewlabel" action="default">Risk Analysis</property>
        </view>
      </item>
    </layout>
  </item>
</layout>